{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "cn-north-1",
            "source_ami": "ami-0220b23b",
            "instance_type": "t2.small",
            "ssh_username": "ubuntu",
            "ami_name": "pingcap-ami {{timestamp}}",
            "ami_description": "PingCAP AMI with timezone preconfigured and essential packages installed",
            "tags": {
                "timezone": "Asia/Shanghai",
		"packages": "ntp/perf/flamegraph/docker/socat/curl/python-yaml"
            }
        }
    ],
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "./playbook.yml",
            "user": "ubuntu"
        }
    ]
}
